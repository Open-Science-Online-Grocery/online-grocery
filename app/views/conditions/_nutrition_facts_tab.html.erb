<div class="ui bottom attached active tab segment" data-tab="nutrition-facts">
  <div class="ui grid">
    <div class="ten wide column">
      <div class="ui segment">
        <div class="fields">
          <div class="ten wide field">
            <label>Font</label>
            <select class="ui dropdown">
              <option>Arial</option>
              <option>Helvetica</option>
