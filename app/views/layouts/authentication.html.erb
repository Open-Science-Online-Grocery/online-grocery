<!DOCTYPE html>
<html>
  <head>
    <title>Howe's Grocery Researcher Portal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'style' %>
    <%= javascript_include_tag 'main', defer: true %>
    <%= javascript_include_tag 'application', defer: true %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
    <div class="ui centered grid container" id="authentication-main">
      <div class="doubling two column row">
        <div class="column">
          <%= MessagesPresenter.new(flash, @messages).show_messages %>
          <div id="authentication-header">
            <%= image_tag('logo_green.png') %>
          </div>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
