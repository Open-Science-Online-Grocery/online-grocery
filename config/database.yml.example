default: &default
  adapter: mysql2
  encoding: utf8
  pool: 5
  username: root
  password:
  socket: /run/mysqld/mysqld.sock


development:
  <<: *default
  database: howes_grocery_development

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  <<: *default
  database: howes_grocery_test

production:
  <<: *default
  database: howes_grocery_production
